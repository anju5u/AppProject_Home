<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="admin.ats.com.focaloidproject.Activities.Product_detail">

    <ImageView
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:id="@+id/pdtdesc_img"/>

    <TextView
        android:id="@+id/pdtdesc_name"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/pdtdesc_img"
        android:layout_marginStart="24dp"
        android:layout_marginTop="31dp"
        />

    <TextView
        android:id="@+id/pdtdesc_price"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/pdtdesc_name"
        android:layout_below="@+id/pdtdesc_name"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="29dp"
        />

    <TextView
        android:id="@+id/pdtdescrptn"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/pdtdesc_price"
        android:layout_centerVertical="true"
        android:layout_marginStart="17dp"
         />


</RelativeLayout>
